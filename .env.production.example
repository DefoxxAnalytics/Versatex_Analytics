# Production Environment Variables for Railway Deployment
# Copy this file and set actual values in Railway dashboard

# Django Settings
DJANGO_SETTINGS_MODULE=config.settings

# SECRET_KEY - Generate a new secure key using one of these methods:
# Method 1 (works without Django):
#   python -c "import secrets, string; chars = string.ascii_letters + string.digits + '@#$%^&*()_+-='; print(''.join(secrets.choice(chars) for _ in range(50)))"
# Method 2 (if Django is installed):
#   python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
# Method 3 (online): https://djecrety.ir/
SECRET_KEY=your-production-secret-key-here-generate-a-new-one

DEBUG=False
ALLOWED_HOSTS=your-app.railway.app,*.railway.app,yourdomain.com

# Database (Railway PostgreSQL)
# Railway will automatically provide DATABASE_URL
# DATABASE_URL=postgresql://user:password@host:port/dbname

# Redis (Railway Redis)
# Railway will automatically provide REDIS_URL
# REDIS_URL=redis://default:password@host:port

# Celery Configuration
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}
CELERY_TASK_ALWAYS_EAGER=False

# CORS Settings
CORS_ALLOWED_ORIGINS=https://your-frontend.railway.app,https://yourdomain.com
CSRF_TRUSTED_ORIGINS=https://your-frontend.railway.app,https://yourdomain.com

# Security
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY

# Email Configuration (Optional - for password resets)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Storage (Optional - use for media files)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# Frontend Configuration
VITE_API_URL=https://your-backend.railway.app/api
VITE_APP_TITLE=Analytics Dashboard
VITE_APP_LOGO=/vtx_logo2.png

# Timezone
TZ=America/New_York

# Python
PYTHONUNBUFFERED=1
